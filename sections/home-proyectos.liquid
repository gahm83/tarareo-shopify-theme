{% schema %}
  {
    "name": "slider-proyectos",
    "disabled_on": {
      "groups": ["header", "footer"]
    },
    "settings": [],
    "presets": [
      {
        "name": "slider-proyectos"
      }
    ]
  }
{% endschema %}
{% style %}
  .swiper-slide.swiper-slide-active {
    opacity: 100;
  }
{% endstyle %}
{% javascript %}
document.addEventListener('DOMContentLoaded', function() {
  const swiperProyectos = new Swiper(".swiperProyectos", {
    slidesPerView: 5,
    centeredSlides: true,
    loop: true,
    on: {
      realIndexChange: function () {
        let index = this.realIndex + 1; /* slide 1 => slides[1] */
        let current_data = this.slides[index].dataset.image;
        console.log(current_data);
      },
    }
  });
});
{% endjavascript %}