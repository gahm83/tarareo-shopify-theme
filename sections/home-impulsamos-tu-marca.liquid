<section id="stacked-at-scroll" class="twcss-relative twcss-bg-black twcss-w-screen twcss-h-screen">
  <div class="stacked-1 twcss-absolute twcss-w-full twcss-top-0 twcss-bg-black twcss-py-16">
    <div class="twcss-w-10/12 twcss-max-w-[1120px] twcss-mx-auto">
      <h2 class="twcss-font-bebasneue twcss-uppercase twcss-text-[64px] twcss-text-white twcss-leading-none">IMPULSAMOS TU MARCA,</h2>
    </div>
  </div>
  <div class="stacked-2 twcss-absolute twcss-w-full twcss-top-0 twcss-bg-black twcss-py-16">
    <div class="twcss-w-10/12 twcss-max-w-[1120px] twcss-mx-auto">
      <h2 class="twcss-font-bebasneue twcss-uppercase twcss-text-[64px] twcss-text-white twcss-leading-none">PROPONEMOS SOLUCIONES,</h2>
    </div>
  </div>
  <div class="stacked-3 twcss-absolute twcss-w-full twcss-top-0 twcss-bg-black twcss-py-16">
    <div class="twcss-w-10/12 twcss-max-w-[1120px] twcss-mx-auto">
      <h2 class="twcss-font-bebasneue twcss-uppercase twcss-text-[64px] twcss-text-white twcss-leading-none">GENERAMOS EMOCIONES.</h2>
    </div>
  </div>
  <div class="twcss-absolute twcss-flex twcss-justify-end twcss-w-10/12 twcss-max-w-[1120px] twcss-bottom-0 twcss-left-1/2 -twcss-translate-x-1/2 twcss-pb-24">
    <img src="{{ 'tarareo-spinner.png' | asset_url }}" width="180" height="180" class="twcss-block  twcss-animate-spin-slow"/>
  </div>
</section>
{% schema %}
  {
    "name": "impulsamos-tu-marca",
    "disabled_on": {
      "groups": ["header", "footer"]
    },
    "settings": [],
    "presets": [
      {
        "name": "impulsamos-tu-marca"
      }
    ]
  }
{% endschema %}
{% javascript %} 
(function () {
  document.addEventListener('DOMContentLoaded', function() {
    gsap.registerPlugin(ScrollTrigger);
    let tl = gsap.timeline({
      // yes, we can add it to an entire timeline!
      scrollTrigger: {
        trigger: '#stacked-at-scroll',
        pin: true,
        start: 'top top',
        end: 'bottom',
        scrub: 0.5,
      }
    });

    tl.from('.stacked-1', { y: "100vh", delay: 0.5, duration: 9 })
      .from('.stacked-2', { y: "100vh", delay: 0.5, duration: 9 })
      .from('.stacked-3', { y: "100vh", delay: 0.5, duration: 9 })
  });
})();
{% endjavascript %}